<div id="messagePinGuideForm" class="ui raised segment signin">
  <div class="cmborder">
    <div class="form_heading">Send a message to {{guideFirstName}} {{guideLastName}} about {{pinActivity}}!</div>
    <form action="/message" method="post">
      <div class="ui form attached fluid segment">
        <div class="two fields">
          <div class="field">
            <label>First Name</label>
            <input type="text" name="message[firstName]" class="ui input" value="{{userFirstName}}">
          </div>
          <div class="field">
            <label>Last Name</label>
            <input type="text" name="message[lastName]" class="ui input" value="{{userLastName}}">
          </div>
        </div>
        <div class="field">
          <label>Message Title</label>
          <input type="text" name="message[messageTitle]" class="ui input" value="" placeholder="Message Title">
        </div>
        <div class="field">
          <label>Message Body</label>
          <textarea name="message[messageBody]" class="ui input" placeholder="Message Body"></textarea>
        </div>
        <div class="inline field">
          <input type="hidden" name="message[userEmail]" value="{{userEmail}}">
        </div>
        <div class="inline field">
          <input type="hidden" name="message[guideFirstName]" value="{{guideFirstName}}">
        </div>
        <div class="inline field">
          <input type="hidden" name="message[guideLastName]" value="{{guideLastName}}">
        </div>
        <div class="inline field">
          <input type="hidden" name="message[guideEmail]" value="{{guideEmail}}">
        </div>
        <div class="inline field">
          <input type="hidden" name="message[pinActivity]" value="{{pinActivity}}">
        </div>
        <div class="inline field">
          <input type="hidden" name="message[pinDescription]" value="{{pinDescription2}}">
        </div>
        <div class="inline field">
          <input type="submit" value="Send" class="ui blue submit button">
        </div>
      </div>
    </form>
  <span class='close_message' id="messageclose">&times;</span>
  </div>
</div>

