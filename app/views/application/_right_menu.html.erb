<div id="right_menu" class="right menu">
  <%= form_for :user, url: login_url do |f| %>
    <div class="item" id="nav_login">
      <%= f.text_field :email, class: "ui input email", placeholder: "Email" %>
    </div>
    <div class="item" id="nav_login">
      <%= f.password_field :password, class: "ui input password", placeholder: "Password" %>
    </div>
    <div class="item">
      <%= f.submit "Log In", class: "ui button" %>
    </div>
    <div class="item">
      <div class="ui teal button column" id="register">Sign up</div>
    </div>
  <% end %>
</div>